<AdicionarVendedorPage>:
    FloatLayout:
        canvas:
            Rectangle:
                size: self.size
                pos: self.pos
                source: "icones/bg1.png"
        Label:
            pos_hint: {"right": 0.9, "top": 0.8}
            size_hint: 0.8, 0.1
            bold: True #colocar texto em  negrito
            text: "Insira o [color=#00CFDB]ID de Outro Vendedor[/color] para acompanh√°-lo"
            markup: True

        # botao adicionar vendedor antes do TextInput para consertar bug
        LabelButton:
            canvas.before:
                Rectangle:
                    size: self.size
                    pos: self.pos
                    source: "icones/botao.png" if self.state == "normal" else "icones/botao_apertado.png" #muda imagem quando apertar 
            on_release: app.adicionar_vendedor(input_id_outrovendedor.text)
            text: 'Adcionar Vendedor'
            pos_hint: {"right": 0.9, "top": 0.55}
            size_hint: 0.8, 0.2

        # campo de texto para adcionar vendedor
        TextInput:
            pos_hint: {"right": 0.9, "top": 0.7}
            size_hint: 0.8, 0.1
            id: input_id_outrovendedor

        # campo de texto de retorno do botao
        Label:
            text: ""
            markup: True
            bold: True
            pos_hint: {"right": 0.9, "top": 0.4}
            size_hint: 0.8, 0.1
            id: mensagem_outrovendedor
        
        # botao de voltar
        FloatLayout:
            pos_hint: {"right": 1, "top": 0.12}
            size_hint: 1, 0.15
            canvas:
                Color: 
                    rgb: utils.get_color_from_hex("#006D7E")
                Rectangle:
                    size: self.size
                    pos: self.pos
            ImageButton:
                pos_hint: {"right": 0.2, "top": 0.95}
                size_hint: 0.2, 0.8
                source: "icones/voltar.png"
                on_release: app.mudar_tela("ajustespage")