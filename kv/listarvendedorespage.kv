<ListarVendedoresPage>:
    FloatLayout:
        canvas:
            Rectangle:
                size: self.size
                pos: self.pos
                source: "icones/bg1.png"
        
        #lista de vendedores
        ScrollView:
            pos_hint: {"right": 1, "top": 0.9}
            size_hint: 1, 0.78
            GridLayout:
                cols: 1
                id: lista_vendedores
                size_hint_y: None #se fosse ScrollView horizontal seria size_hint_x
                spacing: 2, 2
                height: self.minimum_height #se fosse ScrollView horizontal seria width
                row_default_height: "90dp" #se fosse ScrollView horizontal seria col_default_height
                row_force_default: True #se fosse ScrollView horizontal seria col_force_default
        
        # botao de voltar
        FloatLayout:
            pos_hint: {"right": 1, "top": 0.12}
            size_hint: 1, 0.15
            canvas:
                Color: 
                    rgb: utils.get_color_from_hex("#006D7E")
                Rectangle:
                    size: self.size
                    pos: self.pos
            ImageButton:
                pos_hint: {"right": 0.2, "top": 0.95}
                size_hint: 0.2, 0.8
                source: "icones/voltar.png"
                on_release: app.mudar_tela("homepage")